{
  "manifest_version": 3,

  "name": "Vietnam Translate Pro",
  "description": "Translate, collect all word had been translated, push to a quiz and ask user random when using chrome",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon_2.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon_2.png",
    "48": "icon_2.png",
    "128": "icon_2.png"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "tabs",
    "notifications",
    "contentSettings",
    "https://www.facebook.com/",
    "http://*/",
    "http://*/*",
    "https://*/",
    "https://*/*",
    "<all_urls>",
    "activeTab",
    "declarativeContent",
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
